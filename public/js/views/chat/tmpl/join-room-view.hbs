{{#if allowJoin}}
  <a href="#welcome-message" class="chat-input__btn js-join-room">
    Join room
  </a>
{{else}}
  <div class="chat-input__disabledtext">{{disallowJoinReason}}</div>
{{/if}}
{{#if matrixRoomLink}}
  <a href="{{matrixRoomLink}}" class="chat-input__btn chat-input__btn--matrix" target="_blank" rel="nofollow noopener noreferrer">
  <img src='{{cdn "images/svg/matrix-favicon-logo-white.svg"}}' aria-hidden="true">
  Join via Matrix
  </a>
{{/if}}
